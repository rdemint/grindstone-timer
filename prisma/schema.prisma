// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Hangboard {
  id    Int    @id @default(autoincrement())
  name  String
  title String
}

model Interval {
  id                   Int       @id @default(autoincrement())
  workInterval         Int
  restInterval         Int
  exercise Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId Int
  date DateTime @default(now())
}

model Exercise {
  id Int @id @default(autoincrement())
  leftHold String
  leftFingerPosition LeftFingerPosition[]
  leftHoldHangboard String
  rightHold String
  rightFingerPosition RightFingerPosition[]
  rightHoldHangboard String
  action String
  intervals Interval[]
}


model LeftFingerPosition {
  leftFingerPosition FingerPosition @relation(fields:[leftFingerPositionId], references: [id])
  leftFingerPositionId Int 
  exercise Exercise @relation(fields:[exerciseId], references: [id])
  exerciseId Int
  @@id([exerciseId, leftFingerPositionId])
}

model RightFingerPosition {
  rightFingerPosition FingerPosition @relation(fields:[rightFingerPositionId], references: [id])
  rightFingerPositionId Int
  exercise Exercise @relation(fields:[exerciseId], references: [id])
  exerciseId Int
  @@id([exerciseId, rightFingerPositionId])
}

model FingerPosition {
  id Int @id @default(autoincrement())
  name String
  title String
  leftFingerPosition LeftFingerPosition[]
  rightFingerPosition RightFingerPosition[]
}
